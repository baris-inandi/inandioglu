---
import Sidebar from '../components/Sidebar.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Barış İnandıoğlu!</title>
	</head>
	<body>
		<div class="flex items-center justify-center w-screen h-screen">
			<div class="flex items-center h-full w-full max-w-screen-2xl">
				<Sidebar />
				<div
					class="w-full h-full px-12 pt-12 overflow-y-scroll scrollbar-hidden pb-40 text-base"
				>
					<slot />
				</div>
			</div>
		</div>
	</body>
</html>

<style is:global>
	body {
		font-family: Helvetica, Arial, 'Lucida Grande', sans-serif;
		font-weight: 400;
	}

	.text-dimmed {
		@apply text-neutral-400 text-responsive-small font-light;
	}

	.text-responsive-small {
		font-size: calc(12px + 0.5vmin);
	}

	.text-responsive-normal {
		font-size: calc(12px + 0.8vmin);
	}

	.text-responsive-big {
		font-size: calc(12px + 1.4vmin);
	}

	.scrollbar-hidden::-webkit-scrollbar {
		display: none;
	}

	.scrollbar-hidden {
		-ms-overflow-style: none; /* IE and Edge */
		scrollbar-width: none; /* Firefox */
	}
</style>
